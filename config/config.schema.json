{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "config.schema.json-v0.2.0",
    "title": "Bulletin IT 设置",
    "type": "object",
    "properties": {
        "sources_by_selectors_path": {
            "description": "基于选择器的通知来源的文件名",
            "type": "string",
            "default": "config/sources_by_selectors.json"
        },
        "output": {
            "description": "输出",
            "type": "object",
            "properties": {
                "json_path": {
                    "description": "以 JSON 格式保存通知时的文件名",
                    "type": "string",
                    "default": "output/notices.json"
                }
            }
        },
        "ding": {
            "description": "钉钉插件",
            "type": "object",
            "properties": {
                "secrets_path": {
                    "type": "string",
                    "description": "ding.secrets.yaml 的文件名"
                }
            }
        }
    }
}