{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "ding.secrets.schema.json-v0.0.1",
    "type": "object",
    "title": "钉钉机器人秘密信息",
    "description": "钉钉→设置→机器人管理→任意机器人的设置。",
    "properties": {
        "webhook": {
            "type": "string",
            "title": "WebHook URL",
            "description": "以“https://oapi.dingtalk.com”开头。"
        },
        "secret": {
            "type":"string",
            "title": "加密用签名",
            "description": "安全设置→加签，以“SEC”开头。"
        }
    },
    "required": [
        "webhook",
        "secret"
    ]
}